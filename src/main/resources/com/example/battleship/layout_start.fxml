<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.battleship.view.SceneStart">
    <children>
      <ImageView fitHeight="400.0" fitWidth="600.0" pickOnBounds="true">
         <image>
            <Image url="@../../../png/preview.jpg" />
         </image>
         <effect>
            <Blend />
         </effect>
      </ImageView>
        <ChoiceBox fx:id="gamemode" layoutX="60.0" layoutY="227.0" prefWidth="150.0" />
        <TextField fx:id="firatnamefiels" layoutX="60.0" layoutY="134.0" prefHeight="46.0" prefWidth="220.0" promptText="игрок 1">
            <font>
                <Font size="13.0" />
            </font>
        </TextField>
        <TextField fx:id="secondnamefield" layoutX="319.0" layoutY="134.0" prefHeight="46.0" prefWidth="220.0" promptText="игрок 2">
            <font>
                <Font size="13.0" />
            </font>
        </TextField>
        <Button fx:id="startGame" layoutX="208.0" layoutY="296.0" mnemonicParsing="false" prefHeight="58.0" prefWidth="150.0" text="Start" textFill="#155eb0">
            <font>
                <Font name="Comic Sans MS" size="16.0" />
            </font>
        </Button>
        <Label alignment="CENTER" contentDisplay="CENTER" layoutX="161.0" layoutY="29.0" prefHeight="67.0" prefWidth="278.0" text="Battleship" textOverrun="CENTER_ELLIPSIS">
            <font>
                <Font name="Comic Sans MS" size="48.0" />
            </font>
            <textFill>
                <LinearGradient endX="1.0" endY="1.0">
                    <stops>
                        <Stop>
                            <color>
                                <Color red="0.07590000331401825" green="0.39671793580055237" blue="0.6899999976158142" />
                            </color>
                        </Stop>
                        <Stop offset="1.0">
                            <color>
                                <Color red="1.0" green="1.0" blue="1.0" />
                            </color>
                        </Stop>
                    </stops>
                </LinearGradient>
            </textFill>
        </Label>
        <Label fx:id="select" alignment="CENTER" layoutX="60.0" layoutY="200.0" prefHeight="18.0" prefWidth="150.0" style="-fx-background-color: #303030;" text="Select game mode" textFill="WHITE">
            <font>
                <Font name="Comic Sans MS" size="16.0" />
            </font>
        </Label>
    </children>
</AnchorPane>
